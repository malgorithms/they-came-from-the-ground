{
  // Backend code can access any front-end libraries too, for convenience
  "include": ["./src/backend/**/*.ts", "./src/frontend/**/*.ts"],
  "compilerOptions": {
    "strict": true,
    "outDir": "./backend-compiled",
    "rootDir": "./src",
    "sourceMap": false,
    "target": "es2022",
    "allowJs": false,
    "module": "Node16",
    "moduleResolution": "Node16",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  }
}
