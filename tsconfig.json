{
  "compilerOptions": {
    "strict": true,
    "outDir": "./dist/",
    "rootDir": "./src-frontend",
    "sourceMap": false,
    "module": "es6",
    "target": "es6",
    "allowJs": false,
    "moduleResolution": "node",
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["site-backend", "node_modules"]
}
